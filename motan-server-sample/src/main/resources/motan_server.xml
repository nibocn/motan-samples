<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
   http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">
    <motan:registry regProtocol="consul" name="my_consul" address="127.0.0.1:8500"/>

    <bean id="demoRpcServiceImpl" class="me.nibo.motan.server.rpc.DemoRpcServiceImpl"/>
    <bean id="userRpcServiceImpl" class="me.nibo.motan.server.rpc.UserRpcServiceImpl"/>

    <motan:basicService id="myBasicService" registry="my_consul" shareChannel="true" export="8002"
                        group="motan_server_sample" module="motan_server_sample"/>

    <motan:service interface="me.nibo.motan.rpc.api.DemoRpcService" ref="demoRpcServiceImpl"
                   basicService="myBasicService"/>
    <motan:service interface="me.nibo.motan.rpc.api.UserRpcService" ref="userRpcServiceImpl"
                   basicService="myBasicService"/>
</beans>